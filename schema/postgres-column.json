{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./postgres-column.json",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./column-types.json#/$defs/ColumnTypes"
    },
    "native": {
      "type": "string"
    },
    "nullable": {
      "type": "boolean",
      "default": false
    },
    "default": {},
    "unique": {
      "type": "boolean",
      "default": false
    },
    "primary": {
      "type": "boolean",
      "default": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "string"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "anyOf": [
              {
                "const": "text"
              },
              {
                "const": "varbit"
              },
              {
                "const": "uuid"
              },
              {
                "const": "inet"
              },
              {
                "const": "citext"
              },
              {
                "type": "string",
                "pattern": "^char\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^varchar\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^bit\\(\\d+\\)$"
              }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "int"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "int2",
              "int4",
              "int8",
              "serial2",
              "serial4",
              "serial8"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "float"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "float4",
              "float8"
            ]
          }
        }
      }
    }
  ]
}
