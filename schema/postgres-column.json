{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./postgres-column.json",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "./column-types.json#/$defs/ColumnTypes"
    },
    "native": {
      "type": "string"
    },
    "nullable": {
      "type": "boolean",
      "default": false
    },
    "default": {},
    "unique": {
      "type": "boolean",
      "default": false
    },
    "primary": {
      "type": "boolean",
      "default": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "string"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "anyOf": [
              {
                "enum": [
                  "text",
                  "bpchar",
                  "varbit",
                  "uuid",
                  "inet",
                  "citext",
                  "macaddr",
                  "macaddr8",
                  "tsvector",
                  "tsquery"
                ]
              },
              {
                "type": "string",
                "pattern": "^char\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^bpchar\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^character\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^character varyin\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^varchar\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^bit\\(\\d+\\)$"
              }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "int"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "smallint",
              "int2",
              "integer",
              "int",
              "int4",
              "bigint",
              "int8",
              "smallserial",
              "serial2",
              "serial",
              "serial4",
              "bigserial",
              "serial8",
              "oid"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "float"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "real",
              "double precision"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "decimal"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "anyOf": [
              {
                "type": "string",
                "pattern": "^(numeric|decimal)(\\(\\d+(,\\d+)?\\))?$"
              },
              {
                "const": "money"
              }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "bytes"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "bytea"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "datetime"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "anyOf": [
              {
                "const": "date"
              },
              {
                "type": "string",
                "pattern": "^timestamp\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^timestampz\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^time\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^timez\\(\\d+\\)$"
              },
              {
                "type": "string",
                "pattern": "^interval(\\(\\d+\\))?(( day| hour| minute| second| month| year)?( to (day|hour|minute|second|month|year))?)?$"
              }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "boolean"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "type": {
              "type": "boolean"
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "geometric"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "point",
              "line",
              "lseg",
              "box",
              "path",
              "polygon",
              "circle"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "json"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "enum": [
              "json",
              "jsonb"
            ]
          }
        }
      }
    }
  ]
}
