{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./postgres-column.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^([A-Za-z_][A-Za-z0-9_]*|\"([^\"\\\\]|\"\")+\")$"
    },
    "type": {
      "$ref": "./types.json#/$defs/ColumnTypes"
    },
    "native": {
      "type": "string"
    },
    "nullable": {
      "type": "boolean"
    },
    "default": {},
    "unique": {
      "type": "boolean"
    },
    "primary": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "type"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "string"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/string"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "int"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/int"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "float"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/float"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "decimal"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/decimal"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "bytes"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/bytes"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "datetime"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/datetime"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "boolean"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/boolean"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "geometric"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/geometric"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "json"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/json"
          }
        }
      }
    }, 
    {
      "if": {
        "properties": {
          "type": {
            "const": "enum"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/enum"
          },
          "values": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "extended"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/extended"
          }
        }
      }
    }
  ]
}
