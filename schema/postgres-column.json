{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./postgres-column.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^([A-Za-z_][A-Za-z0-9_]*|\"([^\"\\\\]|\"\")+\")$"
    },
    "type": {
      "$ref": "./types.json#/$defs/ColumnTypes"
    },
    "native": {
      "type": "string"
    },
    "nullable": {
      "type": "boolean",
      "default": false
    },
    "default": {},
    "unique": {
      "type": "boolean",
      "default": false
    },
    "primary": {
      "type": "boolean",
      "default": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "string"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/string"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "int"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/int"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "float"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/float"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "decimal"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/decimal"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "bytes"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/bytes"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "datetime"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/datetime"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "boolean"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/boolean"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "geometric"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/geometric"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "json"
          }
        }
      },
      "then": {
        "properties": {
          "native": {
            "$ref": "./postgres-types.json#/$defs/json"
          }
        }
      }
    }
  ]
}
