{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./postgres-table.json",
  "title": "Postgres Table",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^([A-Za-z_][A-Za-z0-9_]*|\"([^\"\\\\]|\"\")+\")$"
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "./postgres-column.json"
      }
    },
    "attributes": {
      "type": "object",
      "properties": {
        "primaryKey": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "columns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "description": "Columns composing the primary key"
            }
          },
          "required": [
            "columns"
          ],
          "additionalProperties": false
        },
        "indexes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "map": {
                "type": "string"
              },
              "columns": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "unique": {
                "type": "boolean"
              },
              "type": {
                "type": "string",
                "enum": [
                  "btree",
                  "hash",
                  "gin",
                  "gist",
                  "spgist",
                  "brin"
                ]
              }
            },
            "required": [
              "columns"
            ],
            "additionalProperties": false
          }
        },
        "relations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "map": {
                "type": "string"
              },
              "columns": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "referencedTable": {
                "type": "string"
              },
              "referencedColumns": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "onUpdate": {
                "type": "string",
                "enum": [
                  "NO ACTION",
                  "RESTRICT",
                  "CASCADE",
                  "SET NULL",
                  "SET DEFAULT"
                ]
              },
              "onDelete": {
                "type": "string",
                "enum": [
                  "NO ACTION",
                  "RESTRICT",
                  "CASCADE",
                  "SET NULL",
                  "SET DEFAULT"
                ]
              }
            },
            "required": [
              "columns",
              "referencedTable",
              "referencedColumns"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "name",
    "columns"
  ]
}
