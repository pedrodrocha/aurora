{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./postgres-table.json",
  "title": "Postgres Table",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^([A-Za-z_][A-Za-z0-9_]*|\"([^\"\\\\]|\"\")+\")$"
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "./postgres-column.json"
      }
    }
  }
}
